<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="SculptureBase">
    <defName>PropagandaSculptureSmall</defName>
    <label>small propaganda sculpture</label>
    <description>A torso-sized piece of material sculpted into an artistic form.</description>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureSmall</texPath>
    </graphicData>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Mass>3</Mass>
      <Beauty>50</Beauty>
      <WorkToMake>18000</WorkToMake>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <comps>
        <li Class="RimPropaganda.CompProperties_Propaganda">
            <canChange>false</canChange>
            <certaintyFactor>0.00002</certaintyFactor>
            <autoIdeo>true</autoIdeo>
        </li>
        <li Class="CompProperties_Styleable"></li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="SculptureBase">
    <defName>PropagandaSculptureLarge</defName>
    <label>large propaganda sculpture</label>
    <description>A person-sized piece of material sculpted into an artistic form.</description>
    <castEdgeShadows>true</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureLarge</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>7</Mass>
      <Beauty>100</Beauty>
      <WorkToMake>1</WorkToMake>
      <!--<WorkToMake>30000</WorkToMake>-->
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">20</StyleDominance>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <comps>
        <li Class="RimPropaganda.CompProperties_Propaganda">
            <canChange>false</canChange>
            <certaintyFactor>0.00002</certaintyFactor>
            <autoIdeo>true</autoIdeo>
        </li>
        <li Class="CompProperties_Styleable"></li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="SculptureBase">
    <defName>PropagandaSculptureGrand</defName>
    <label>grand propaganda sculpture</label>
    <description>A huge sculpture sized to dominate a room.</description>
    <castEdgeShadows>true</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureGrand</texPath>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <size>(2,2)</size>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Beauty>400</Beauty>
      <Mass>28</Mass>
      <WorkToMake>105000</WorkToMake>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">40</StyleDominance>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>400</costStuffCount>
    <comps>
        <li Class="RimPropaganda.CompProperties_Propaganda">
            <canChange>false</canChange>
            <certaintyFactor>0.00002</certaintyFactor>
            <autoIdeo>true</autoIdeo>
        </li>

    </comps>
  </ThingDef>
</Defs>